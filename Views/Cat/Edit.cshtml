@model CatViewModel
<h1>Edit Cat Info</h1>
<hr />
<form method="post">
    <div>
        <label> Cat Name </label>
        <input type="text" name="Name" value="@Model.Name" /><br /><br />
    </div>
    <div>
        <label>Cat Age  </label>
        <input type="text" name="Age" value="@Model.Age" /> <br /> <br />
    </div>
    <div>
        <label>Cat Breed</label>
        <input type="text" name="Breed" value="@Model.Breed"/> <br /> <br />
    </div>
    <div>
        <label>Image Url</label>
        <input type="text" name="ImgUrl" value="@Model.ImgUrl" /> <br /> <br />
        <input type="submit" value="Edit Cat" />
    </div>
</form>
